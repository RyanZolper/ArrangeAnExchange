<div class="container-fluid">
  <div class="setup" style="width:30%">
    <%= form_for(@user, {url: {controller: "users", action: "update"}}) do |f| %>

      <div class="form-group">
        <%= f.label :email, class: "w3" %>
        <%= f.text_field :email, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :name, class: "w3" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :country, class: "w3" %>
        <%= f.text_field :country, class: "form-control", id: "country-signup", size: "42" %>
      </div>

      <%= f.submit class: "btn btn-primary btn-lg" %>
    <% end %>
  </div>
</div>
