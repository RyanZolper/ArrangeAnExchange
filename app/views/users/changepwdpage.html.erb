<%= form_for @user, url: {action: "changepwd"} do |f| %>

  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>

  <div class="field">
    <%= f.label :confirm %><br>
    <%= f.password_field :password_confirmation %>
  </div>

  <div class="actions">
    <%= f.submit "Change Password" %>
  </div>

<% end %>
