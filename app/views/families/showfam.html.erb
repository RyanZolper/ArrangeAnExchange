

<%= @fam.tagline %><br>

  <% if @fam.interesteds.include?(@current_user) %>

    <%= form_tag users_unsavefam_path do %>
      <%= hidden_field_tag(:family_id, @fam.id) %>
      <%= submit_tag("Unsave") %>
    <% end %>

  <% else %>

    <%= form_tag users_savefam_path do %>
      <%= hidden_field_tag(:family_id, @fam.id) %>
      <%= submit_tag("Save") %>
    <% end %>

  <% end %>

<button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#myModal">
  Connect!
</button>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Connect with this family from <%= @fam.country %>!</h4>
      </div>
      <div class="modal-body">
        This family will receive an email from you that looks like this:<br><br>

        Subject: <%= @current_user.name %> from <%= @current_user.country %> wishes to connect!<br><br>

        The body of the email will be whatever you enter below!<br>



        <%= form_tag users_connect_path do %>
          <textarea rows="10" cols="75" name="content" placeholder="Hint: Friendlyness of connection email and connection success are directly correlated!"></textarea>
          <%= hidden_field_tag 'user_id', @current_user.id %>
          <%= hidden_field_tag 'fam_id', @fam.id %>
          <br>
          <%= submit_tag 'Send!' %>
        <% end %>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>


<div class="main-image">
  <img src="<%= @fam.housepic %>" alt="Placeholder" height="400" class="custom">
</div>


<div class="thumbnails">

<% @fam_attachments.each do |pichold| %>

  <a href="<%= pichold.image %>">
    <%= image_tag("#{pichold.image}", height: '60', alt: "Thumbnails") %>
  </a>

<% end %>
</div>
<br><br>

<h2>Our family is located in <%= @fam.city %>, <%= @fam.country %>.</h2>
<br><br>
<h2>About staying here:</h2><br><br>

  <h3>Our family:</h3><br><br>

    <%= @fam.bio %>

    <h3>Our home:</h3><br><br>

    <h4>General info:</h4><br><br>

      <%= @fam.beds %> beds
      <%= @fam.baths %> baths
      <%= @fam.size %> family members<br><br>

      <h4>Smokers?</h4><br><br>

      <% if @fam.smokers == true %>
        Yes
      <% else %>
        No
      <% end %>
      <br><br>
      <h4>Traveler Privacy:</h4><br><br>

      <h4>Private bedroom?</h4><br><br>

      <% if @fam.pvtbed == true %>
        Yes!
      <% else %>
        No
      <% end %>
      <br><br>
      <h4>Private bathroom?</h4><br><br>

      <% if @fam.pvtbath = true %>
        Yes!
      <% else %>
        No
      <% end %>
      <br><br>
    <h4>Special features:</h4><br><br>

      <% @fam.features.each do |f| %>
        <%= f.upcase %>!<br>
      <% end %>
      <br><br>
  <h3>Our area:</h3><br><br>

    <h4>About life here:</h4><br><br>

    <%= @fam.lifehere %><br><br>

    <h4>Attractions:</h4><br><br>

      <%= @fam.attracts %><br><br>

      <h4>Local environment:</h4><br><br>

      <%= @fam.env %><br><br>







<br>
<div class="container-fluid">

  <h3>This family's travelers:</h3><br><br>
  <div class="row">
    <% @fam.travelers.each do |trav| %>

      <div class="col-md-3">
        Age: <%= trav.age %><br>
        <%= image_tag("#{trav.pic}", width: '300') %><br><br>
        <%= trav.tagline %><br><br>
        <%= link_to "View Profile", showtrav_path(trav), class: "btn btn-default" %>

      </div>






    <% end %>
  </div>
</div>
