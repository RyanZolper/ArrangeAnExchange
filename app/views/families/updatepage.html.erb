<div class="container-fluid">
<div class="setup" style="background-color:rgba(189, 189, 189, 1);">
<div>
<w2>Update Family</w2>
</div>
<%= form_for(@fam, {url: {controller: "families", action: "update"}}) do |f| %>

<div class="row" style="background-color:white;width:100%;margin:auto;">
  <div class="col-md-12">

    <div class="form-group">
      <w3><%= f.label :name %></w3><br>
      <%= f.text_field :name, placeholder: " The Adams Family " %>
    </div>
  </div>

</div>

<div class="row">
  <div class="col-md-9">
    <div class="form-group">
      <w3><%= f.label :tagline %></w3><br><br>
      <%= f.text_field :tagline, class: "form-control", placeholder: "Come stay with us in France and eat croissants!" %>
    </div><br>
    <div class="row">
      <div class="col-md-6">
        <w3><%= f.label :city %></w3><br>
        <%= f.text_field :city, placeholder: " Paris " %>
      </div>

      <div class="col-md-6">
        <w3><%= label_tag :state_or_region %></w3><br>
        <%= text_field_tag 'region', nil, placeholder: " (If applicable)" %>
      </div>
    </div>



  </div>

  <div class="col-md-3"><br>
    <div class="form-group">
      <w3><%= f.label :family_size %></w3><br>
      <w3><%= f.select :size, options_for_select((1..10), @fam.size) %></w3>
    </div>

    <div class="form-group">
      <w3><%= f.label :bedrooms %></w3><br>
      <w3><%= f.select :beds, options_for_select((1..10), @fam.beds) %></w3>
    </div>

    <div class="form-group">
      <w3><%= f.label :bathrooms %></w3><br>
      <w3><%= f.select :baths, options_for_select((1..10), @fam.baths) %></w3>
    </div>
  </div>
</div>
<br>
<div class="row" style="background-color:white;width:100%;margin:auto;">
  <div class="col-md-7" style="text-align:left;">
    <div class="row">
      <div style="text-align:center;">
      <w3>Mark some of your home's features</w3><br><br>
      </div>
      <w3><div class="col-md-4">
        <div class="form-group">
          <%= f.check_box :features, {:multiple => true}, "pool", nil %>
          <%= f.label :pool %>
          <br><br>
          <%= f.check_box :features, {:multiple => true}, "hot tub", nil %>
          <%= f.label :hot_tub %>
          <br><br>
          <%= f.check_box :features, {:multiple => true}, "big yard", nil %>
          <%= f.label :big_yard %>
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-group">
          <%= f.check_box :features, {:multiple => true}, "great view", nil %>
          <%= f.label :great_view %>
          <br><br>
          <%= f.check_box :features, {:multiple => true}, "oceanfront", nil %>
          <%= f.label :oceanfront %>
          <br><br>
          <%= f.check_box :features, {:multiple => true}, "sunsets", nil %>
          <%= f.label :sunsets %>
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-group">
          <%= f.check_box :features, {:multiple => true}, "dogs", nil %>
          <%= f.label :dogs %>
          <br><br>
          <%= f.check_box :features, {:multiple => true}, "cats", nil %>
          <%= f.label :cats %>
          <br><br>
          <%= f.check_box :features, {:multiple => true}, "horses", nil %>
          <%= f.label :horses %>
        </div></w3>
      </div>

    </div>
  </div>

  <div class="col-md-5">

    <w3><div class="form-group">
      <%= f.label :does_your_family_have_smokers? %><br />
      <%= f.label :smokers, "Yes", :value => "true"  %>
      <%= f.radio_button :smokers, true %>
      <%= f.label :smokers, "No", :value => "false" %>
      <%= f.radio_button :smokers, false, :checked => true %>
    </div>

    <div class="form-group">
      <%= f.label :will_visitor_have_a_private_bedroom? %><br />
      <%= f.label :pvtbed, "Yes", :value => "true"  %>
      <%= f.radio_button :pvtbed, true %>
      <%= f.label :pvtbed, "No", :value => "false" %>
      <%= f.radio_button :pvtbed, false, :checked => true %>
    </div>

    <div class="form-group">
      <%= f.label :will_visitor_have_a_private_bathroom? %><br />
      <%= f.label :pvtbath, "Yes", :value => "true"  %>
      <%= f.radio_button :pvtbath, true %>
      <%= f.label :pvtbath, "No", :value => "false" %>
      <%= f.radio_button :pvtbath, false, :checked => true %>
    </div></w3>
  </div>
</div>
<w3><br>
<div class="form-group">
  <%= label_tag "Family Life" %><br>
  <%= f.text_area :bio, style: "font-family:Century Gothic,CenturyGothic,AppleGothic,sans-serif;font-size:18px;", rows: 10, cols: 75, placeholder: "Write a little bit about your family, and what it is like living with them!" %>
</div>

<div class="form-group">
  <%= label_tag "Life In Your Area" %><br>
  <%= f.text_area :lifehere, style: "font-family:Century Gothic,CenturyGothic,AppleGothic,sans-serif;font-size:18px;", rows: 10, cols: 75, placeholder: "Write a little bit about life in your city/town." %>
</div>

<div class="form-group">
  <%= label_tag "Local Attractions" %><br>
  <%= f.text_area :attracts, style: "font-family:Century Gothic,CenturyGothic,AppleGothic,sans-serif;font-size:18px;", rows: 10, cols: 75, placeholder: "Write about a few cool attractions in your area." %>
</div>

</w3>


<div class="actions">
  <%= f.submit class: "btn btn-primary btn-lg" %>
</div>
<% end %><br>
</div>
</div>
