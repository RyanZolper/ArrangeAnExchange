<% if @current_user == nil %>
<div class="container-fluid">
  <div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <w1 class="modal-title" id="myModalLabel">Welcome back!</w1>
          <div id="login_alert">
          </div>
        </div>
        <div class="modal-body">
          <w2>Log in, and find your perfect host.</w2><br><br>

          <%= form_for @user, url: {controller: "users", action: "login"}, remote: true do |f| %>
            <div class="field">
              <w3><%= f.label :email %></w3><br>
              <%= f.search_field :email, class: "form-control" %>
            </div><br>
            <div class="field">
              <w3><%= f.label :password %></w3><br>
              <%= f.password_field :password, class: "form-control" %>
            </div>
        </div>
        <div class="modal-footer">
          <div class="actions">
            <%= f.submit "Login", class: "btn btn-primary btn-lg btn-block" %>
          </div>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>

<div class="container-fluid">
  <div class="modal fade" id="signupModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <w1 class="modal-title" id="myModalLabel">Sign Up!</w1>
          <div id="signup_alert">
          </div>
        </div>
        <div class="modal-body">

          <w2>Join Now To Start Your Adventure!</w2><br><br>

          <%= form_for @user, url: {controller: "users", action: "create"}, remote: true do |f| %>

            <div class="field">
              <w3><%= f.label :name %></w3><br>
              <%= f.text_field :name, class: "form-control" %>
            </div><br>

            <div class="field">
              <w3><%= f.label "Country of Residence" %></w3><br>
              <%= f.text_field :country, class: "form-control", id: "country-signup", size: "42" %>
            </div><br>

            <div class="field">
              <w3><%= f.label :email %></w3><br>
              <%= f.text_field :email, class: "form-control" %>
            </div><br><br>


            <%= hidden_field_tag(:temp, @temp) %>

        </div>
        <div class="modal-footer">
          <div class="actions">
            <%= f.submit "Sign Up!", class: "btn btn-primary btn-lg btn-block" %>
            <%= f.hidden_field(:password, :value => @temp ) %>
            <%= f.hidden_field(:password_confirmation, :value => @temp ) %>
          </div>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>
<% end %>


<%= yield %>

