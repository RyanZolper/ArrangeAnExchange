<div class="container-fluid">
<div class="setup" style="background-color:rgba(189, 189, 189, 1);">
<div class="row w2" style="background-color:white;width:100%;margin:auto;border-top-left-radius:15px;border-top-right-radius:15px;">Traveler Setup</div>

<div class="row" style="border:none;">
  <div class="col-md-6">
    <%= form_for @trav, url: {action: "create"} do |f| %>

    <div class="form-group">
      <span class="w3"><%= f.label :name %></span><br>
      <%= f.text_field :name %>
    </div>

    <div class="form-group">
      <span class="w3"><%= f.label :tagline %></span><br>
      <%= f.text_field :tagline, placeholder: "I want so see the world!" %>
    </div>

  </div>
  <div class="col-md-6">

    <div class="form-group">
      <span class="w3"><%= f.label :age %></span><br>
      <span class="w3"><%= f.select :age, options_for_select(13..28) %></span>
    </div><br>
    <div style="width:200px;margin-left:auto;margin-right:auto;">
    <div class="field">
      <span class="w3"><%= f.label :profile_picture %></span><br>
      <%= f.file_field :pic %>
    </div>
  </div>
  </div>
</div>


<br>
<div class="form-group">
  <span class="w3"><%= label_tag "Traveler's Bio" %></span><br>
  <%= f.text_area :bio, style: "font-family:Century Gothic,CenturyGothic,AppleGothic,sans-serif;font-size:18px;", rows: 10, cols: 75, placeholder: "Write about yourself and why you'll be a good guest." %>

</div>
<div class="actions">
  <%= f.submit class: "btn btn-primary btn-lg" %>
</div>

<% end %><br>
</div>
</div>
